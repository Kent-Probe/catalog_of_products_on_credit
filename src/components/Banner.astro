---
import Image from "@/img/banner.png";

---

<div>
    <img src={Image.src} alt="Banner" class="w-full h-full object-cover" />
</div>

<style>
    div {
        background-color: #792EDE;
        height: 39rem;
        width: 100%;
        border-radius: 0.8rem;
        overflow: hidden;

        & img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    }

    @media (max-width: 768px) {
        div {
            height: 15rem;
        } 
    }

</style>