---
import BatteryIcon from "@/icon/BatteryIcon.astro";
import CameraFrontIcon from "@/icon/CameraFrontIcon.astro";
import CameraIcon from "@/icon/CameraIcon.astro";
import DeviceIcon from "@/icon/DeviceIcon.astro";
import HardDiskIcon from "@/icon/HardDiskIcon.astro";
import MemoryIcon from "@/icon/MemoryIcon.astro";
import ProcessorIcon from "@/icon/ProcessorIcon.astro";

import ImageSrc from "@/img/placeHolder.png";

type product = {
    id: number;
    brand: string;
    model: string;
    rear_camera_mp: number;
    front_camera_mp: number;
    image: string;
    rom_memory_gb: number;
    ram_memory_gb: number;
    processor: string;
    screen_inches: number;
    battery_mah: number;
    financials: string[];
    savings: number;
    installments: { quantity: number, price: number }[];
}

type CardProductProps = {
    product: product;
}

const { product }: CardProductProps = Astro.props;
const image = product.image || ImageSrc.src;

---

<article class="card-product">
    <div class="card-product__header">
        <div class="card-product__container-img">
            <img src={image} alt={product.model} loading="lazy"/>
        </div>
        <div class="card-product__content">
            <p>{product.brand}</p>
            <h3>{product.model}</h3>
            <div class="content__info">
                <p class="info__data">
                    <span>
                        <CameraIcon fill="#a754fa"/>
                    </span>
                    <span>{product.rear_camera_mp}</span>
                </p>
                <p class="info__data">
                    <span>
                        <CameraFrontIcon fill="#a754fa"/>
                    </span>
                    <span>{product.front_camera_mp}</span>
                </p>
                <p class="info__data">
                    <span>
                        <HardDiskIcon fill="#a754fa"/>
                    </span>
                    <span>{product.rom_memory_gb}</span>
                </p>
                <p class="info__data">
                    <span>
                        <MemoryIcon fill="#a754fa"/>
                    </span>
                    <span>{product.ram_memory_gb}</span>
                </p>
                <p class="info__data">
                    <span>
                        <ProcessorIcon fill="#a754fa"/>
                    </span>
                    <span>{product.processor}</span>
                </p>
                <p class="info__data">
                    <span>
                        <DeviceIcon fill="#a754fa"/>
                    </span>
                    <span>{product.screen_inches}</span>
                </p>
                <p class="info__data">
                    <span>
                        <BatteryIcon fill="#a754fa"/>
                    </span>
                    <span>{product.battery_mah}</span>
                </p>
            </div>
        </div>
    </div>
    <div class="card-product__footer-info">
        <h4>Precio: ${product.savings.toLocaleString()}</h4>
        <div class="footer-info__data">
            <h5>Financiera</h5>
            <div class="footer-info__chips">
                {product.financials.map(financial => (
                    <span>{financial}</span>
                ))}
            </div>
        </div>
    </div>
    <div class="card-product__quotas">
        {product.installments.map((installment, index) => (
            <div class="quotas__chip">
                <p>{index === 0 ? "Inicial" : installment.quantity + " Cuotas"}</p>
                <p>$ {installment.price.toLocaleString()}</p>
            </div>
        ))}
    </div>
</article>

<style>    
    .card-product {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
        border: 1px solid #ccc;
        border-radius: 0.5rem;

        transition: box-shadow 0.4s ease-in-out;

        & .card-product__container-img::after{
            content: '';
            position: absolute;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
            background: radial-gradient(circle, rgba(167,84,250,1) 20%, rgba(102,51,153,1) 80%);
            z-index: 1 !important;
        }
        &:hover .card-product__container-img::after{
            opacity: 1;
        }

        &:hover{
            box-shadow: 0 0 10px 0 rgba(0,0,0,0.1);
        }
        &:hover .card-product__container-img > img{
            transform: scale(1.05);
            transition: transform 0.3s ease-in-out;
        }
    }

    .card-product__header {
        display: flex;
        flex-direction: row;

        gap: 1rem;
    }

    .card-product__container-img{
        --space-img: 1rem;
        position: relative;
        width: 120px;
        height: 280px;
        overflow: hidden;
        padding: 1rem;
        border-radius: 0.5rem;
        background: radial-gradient(circle, rgba(167,84,250,1) 0%, rgba(102,51,153,1) 100%);
        transition: 0.3s ease-in-out;
        & > img{
            position: absolute;
            width: calc(100% - var(--space-img) * 2);
            height: calc(100% - var(--space-img) * 4);
            top: var(--space-img);
            bottom: var(--space-img);
            left: var(--space-img);
            right: var(--space-img);
            /* scale: 2.5; */
            z-index: 10;
            object-fit: fill;
            transition: all 0.3s ease-in-out;
        }
    }

    .card-product__content{
        display: flex;
        flex-direction: column;
        align-items: start;
        justify-content: start;
        flex-grow: 1;

        & > p{
            margin: 0;
            font-size: 1.1rem;
            letter-spacing: 0.01rem;
            font-weight: 700;
            color: #a754fa;
        }

        & > h3{
            margin-bottom: 0.4rem;
            font-size: 2rem;
            font-weight: 600;
        }
    }

    .content__info{
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
        width: 100%;

        & > .info__data{
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.5rem;

            & > span{
                display: flex;
                align-items: center;
                justify-content: center;

                font-size: 1.2rem;
                font-weight: 600;
            }

            & > span:first-child{
                color: rgb(167, 84, 250);
            }
        }
    }

    .card-product__footer-info{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        flex-wrap: wrap;
        align-items: center;

        & > h4{
            margin: 0;
            font-size: 1.5rem;
            font-weight: 700;
            color: rebeccapurple;
        }
    }

    .footer-info__data{
        display: flex;
        flex-direction: column;
        gap: 0.4rem;

        & > h5{
            font-size: 1.2rem;
            font-weight: 600;
        }
    }

    .footer-info__chips{
        display: flex;
        gap: 0.5rem;

        & > span{
            padding: 0.5rem;
            border-radius: 0.5rem;
            background-color: rgb(167, 84, 250);
            color: white;
            font-size: 1rem;
            font-weight: 600;
        }
    }

    .card-product__quotas{
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: start;
        align-items: center;
        gap: 1rem;

        & > .quotas__chip{
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            gap: 0.4rem;
            padding: 0.5rem;
            border: 2px solid rebeccapurple;
            border-radius: 1rem;

            & > p{
                margin: 0;
                font-size: 1.2rem;
                font-weight: 600;
            }

            & > p:last-child{
                font-weight: 400;
                background-color: rebeccapurple;
                color: #fff;
                padding: 0.2rem 0.5rem;
                border-radius: 0.5rem;
            }
        }
    }
</style>