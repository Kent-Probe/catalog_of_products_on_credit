---
import Search from "@/components/Search.astro";
import { app } from "@/firebase/server";
import Favicon from "@/icon/Favicon.astro";
import { getAuth } from "firebase-admin/auth";

let isLogin = false;
let email = "";
/* Check if the user is authenticated */
if (Astro.cookies.has("__session")) {
    const auth = getAuth(app);
    const sessionCookie = Astro.cookies.get("__session").value;
    const decodedCookie = await auth.verifySessionCookie(sessionCookie);
    if (decodedCookie) {
        isLogin = true;
        email = decodedCookie.email;
    }
}

type Props = {
    isSearch?: boolean;
}

const { isSearch = true }: Props = Astro.props;

---

<script>
    const button = document.querySelector('.login-container-button');
    const form = button.querySelector('form');

    button.addEventListener('click', (e) => {
        console.log('click');
        button.classList.toggle('active_login-container');
        form.classList.toggle('open_container');
    });

    window.addEventListener('click', function(e) {
        if (!button.contains(e.target)) {
            button.classList.remove('active_login-container');
            form.classList.remove('open_container');
        }
    });

    const buttonToCredit = document.querySelector('#create-credit');
    buttonToCredit?.addEventListener('click', () => {
        window.location.href = '/create-credit';
    });

    

</script>

<header>
    <a href="/" transition:name="logo-samicel"  class="logo-container">
        <Favicon />
        <h1>Samicel</h1>
    </a>

    
    {isSearch && 
        <div class="search-container">
            <Search />
        </div>}

    {isLogin && (
        <div type="button" class="login-container-button">
            {email}
            <form action="/api/auth/signout">
                <button type="submit">
                    Cerrar sesión
                </button>
                <button type="button" id="create-credit">
                    Crear un producto
                </button>
            </form>
        </div>
    )}

    {!isLogin && (
        <div transition:name="login-text" class="login-container">
            <a href="/login">Iniciar sesión</a>
        </div>
    )}
</header>

{isSearch && <span class="space"></span> }

<style>
    header {
        position: relative;
        padding: 3rem 10rem;
        background-color: #fff;
        
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    a{
        text-decoration: none;
        color: #333;
    }

    .login-container, .login-container-button{
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;

        padding: 0.5rem 1rem;
        border-radius: 4px;
        border: 1px solid rebeccapurple;
        background-color: #fff;
        color: rebeccapurple;
        cursor: pointer;
        user-select: none;
        transition: background-color 0.3s ease-in-out;

        &:hover{
            background-color: rebeccapurple;
            color: #fff;

            & > a {
                color: #fff;
            }
        }

        & > a{
            color: rebeccapurple;
            text-decoration: none;
            transition: color 0.3s ease-in-out;
        }

        & > form{
            opacity: 0;
            display: none;
            position: absolute;
            top: calc(-100% - 50px);
            left: 0;
            gap: 1rem;

            background-color: #f2f2f2;
            padding: 1rem;
            width: 100%;
            
            transition-property: top, display, opacity;
            transition-behavior: allow-discrete;
            transition-duration: 0.3s;
            transition-timing-function: ease-in-out;

            & > a {
                text-decoration: none;
                text-align: center;
                font-size: 1.2rem;
                display: inline-block;
                padding-inline: 0;
            }

            & > button{
                width: 100%;
                height: 100%;
                padding: 0.5rem 1rem;
                border: none;
                color: #333;
                cursor: pointer;
                transition: background-color 0.3s ease-in-out;

                &:hover{
                    background-color: #fff;
                    color: rebeccapurple;
                }
            }
        }
    }

    .active_login-container{
        background-color: rebeccapurple;
        color: #fff;

        & > a {
            color: #fff;
        }
    }

    .open_container{
        display: block !important;
        top: calc(100% + 5px) !important;
        opacity: 1 !important;

        @starting-style{
            top: calc(-100% - 50px) !important;
            display: none;
            opacity: 0;
        }
    }

    .search-container { 
        display: flex;
        justify-content: center;
        align-items: center;
        width: 500px;
    }
    
    .logo-container { 
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        & > :global(svg){
            width: 50px;
            height: 50px;
        }
    }
    h1 {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
    }

    @media (max-width: 1000px) {
        header {
            padding: 1rem 2rem;
        }

        .search-container { 
            /* width: 100%; */
        }
    }

    @media (max-width: 800px) {
        header {
            padding: 1rem 1.5rem;
        }
        
        .space{
            display: block;
            height: 5.5rem;
            width: 100%;
        }

        .login-container{
            padding: 0.5rem 0.8rem;
        }     
        
        .logo-container{
            & > :global(svg){
                width: 25px;
                height: 25px;
            }

            & > h1{
                font-size: 1.5rem;
            }
        }

        .search-container{
            --padding: 4rem;
            position: absolute;
            top: calc(100% + 1.5rem);
            width: calc(100% - var(--padding) * 2);
            padding-inline: var(--padding);
            left: 0;
        }
    }

</style>