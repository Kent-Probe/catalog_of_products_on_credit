---
import { ClientRouter } from "astro:transitions";

type FilterLayout = {
	title: string,
}

const { title }: FilterLayout = Astro.props;

---
<!doctype html>
<html lang="ES">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<ClientRouter />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<div class="message">
			<p class="message-text">Mensaje a presentar</p>
		</div>
	</body>
</html>

<style is:global>
	.message{
		text-align: start;
		display: none;
		opacity: 0;
		position: fixed;
		bottom: 15rem;
		right: 4rem;
		min-width: 40rem;
		z-index: 999999;
		color: white;
		padding: 1rem;
		text-align: center;
		font-size: 1.5rem;
		border-left: 1rem solid;

		
		
		&.message-active{
			transition: all 0.3s ease-in-out allow-discrete;
			display: block !important;
			opacity: 1 !important;
			bottom: 10rem !important;
			@starting-style{
				display: none;
				opacity: 0;
				bottom: 15rem;
			}
		}

		&.message-error{
			background-color: #ff4d4d;
			border-color: #ff1a1a;
		}

		&.message-success{
			background-color: #4dff4d;
			border-color: #1aff1a;
		}

		&.message-warning{
			background-color: #ffcc00;
			border-color: #ff9900;
		}

		&.message-info{
			background-color: #4d94ff;
			border-color: #1a75ff;
		}

		&.message-danger{
			background-color: #ff1a1a;
			border-color: #cc0000;
		}

		&.message-primary{
			background-color: #4d4dff;
			border-color: #1a1aff;
		}

		&.message-secondary{
			background-color: #a6a6a6;
			border-color: #737373;
		}

		&.message-dark{
			background-color: #333;
			border-color: #000;
		}

		&.message-light{
			background-color: #f2f2f2;
			border-color: #d9d9d9;
		}

		& > .message-text{
			width: 100%;
			text-align: start;
		}
	}

	html{
		font-family: Poppins, Arial, sans-serif;
		font-size: 10px;
		scroll-behavior: smooth;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		scroll-behavior: smooth;
	}

	p{
        margin: 0;
    }

	h1, h2, h3, h4, h5, h6{
		margin: 0;
	}
</style>
